<span style="display:inline-block; width:10px;"></span>
            Settings       
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink  class="nav-link"  @onclick="ExitSys">
                <span class="oi oi-account-logout" aria-hidden="true"></span>
                Exit       
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private string Song{get;set;} ="/";
    private string Video{get;set;}= "video";
    private string Media{get;set;} ="media";
    private string Search {get;set;}="search";
    private string Config{get;set;} = "settings";
    void ExitSys()
    {
        Environment.Exit(0);
    }
    void GoTo(string link)
    {
        //Get.Pink($"Has Action: {YouwebStatic.HasActions()} Current Action: {YouwebStatic.CurrentAction}");
        if(YouwebStatic.HasActions() == true)
        {
            Get.Yellow("Returning because it has an ongoing action...");
            return;
        }if(YouwebStatic.HasActions() == false)
        {
            MyNavigationManager.NavigateTo(link);
        }
    

    }
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
       if(YouwebStatic.HasActions() == false)
       {
         collapseNavMenu = !collapseNavMenu;
       }
    }
}
